{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true,
    "jest": true
  },
  "extends": [
    "standard",
    "prettier",
    "prettier/standard",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "react-hooks"],
  "rules": {
    "react/display-name": [2, { "ignoreTranspilerName": true }],
    "no-console": 0,
    "no-magic-numbers": 0,
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 4,
        "useTabs": true,
        "singleQuote": true,
        "printWidth": 100,
        "trailingComma": "none"
      }
    ],
    "comma-dangle": [2, "never"],
    "semi": [2, "always"],
    "no-tabs": 0,
    "no-new": 1,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "valid-jsdoc": [
      2,
      {
        "requireParamDescription": false,
        "requireReturnDescription": false,
        "requireReturn": false
      }
    ],
    "jsx-a11y/media-has-caption": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
